*{
	margin:0;
	padding:0;
	font-family: 'Merienda', cursive;
font-family: 'Varela Round', sans-serif;
}
nav{
	display:flex;
	padding:2%6%;
justify-content:space-between;
align-items:center;
}
nav img{
	width:60px;
}
nav-links{
	flex:1;
	text-align:right;
}
.nav-links ul li{
	display:inline-block;
	padding:8px 12px;
	position:relative;
	list-style:none;
}
.nav-links ul li a{
	color:black;
	text-decoration:none;
	font-size:13px;
}
.nav-links ul li::after{
	content:'';
	width:0%;
	height:3px;
	background:#bf00ff;
	display:block;
	margin:auto;
	transition:0.5s;
}
.nav-links ul li:hover::after{
width:100%;
}
.col-1{
	flex-basis:100%;
}
.col-1 img{
	width:1519.1px;
	height:750px;
}
.title{
	text-align:center;
	padding:15px 0;
	
}
.col-2{
	width:80%;
	margin:auto;
	text-align:center;
	padding-top:50px;
}
h1{
	font-size:55px;
	font-weight:600;
	font-family: 'Buda', cursive;
}
h4{
	font-size:18px;
	font-weight:400;
	color:#779;
	font-family: 'Buda', cursive;
}
p{
	color:#777;
	font-size:14px;
	font-weight:300;
	line-height:22px;
	padding:10px;
	
}
